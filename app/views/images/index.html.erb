<section class="header-section">
  <div class="header-title">
    <h6>
      Add an Image to <%= @destination.title %>
    <h6>
  </div>
</section>

  <%= link_to "Go Back to #{@destination.title}", destination_path(@destination) %>

  <div class="cards">
      <% @images.each do |image| %>
        <div class="card image-<%= image.id %>">
          <img src="<%= image.url %>" alt="<%= image.name %>">
          <h1><%= image.name %></h1>
          <div class="add-image">
            <%= link_to '<i class="far fa-plus-square"></i>'.html_safe, destination_images_path(image_id: image.id), method: :post %>
          </div>
        </div>
      <% end %>
  </div>
